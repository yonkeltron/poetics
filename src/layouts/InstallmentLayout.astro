---
interface Props {
  title: string;
  extraStyles?: string;
}

const { title, extraStyles } = Astro.props;
---

<!doctype html>
<html lang="en" class={extraStyles}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={`Poetics, experimental: ${title}`} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
